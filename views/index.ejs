          <div class="category-card"><img src="./assets/image5.jpg" alt="Action 4" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image6.jpg" alt="Action 5" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image1.jpg" alt="Action 6" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image2.jpg" alt="Action 7" class="img-fluid"></div>
        </div>
        <!-- Romance & Drama -->
        <h2>Romance & Drama</h2>
        <div class="category-row">
          <div class="category-card"><img src="./assets/imageromance.jpg" alt="Romance 1" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image4.jpg" alt="Romance 2" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image5.jpg" alt="Romance 3" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image6.jpg" alt="Romance 4" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image1.jpg" alt="Romance 5" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image2.jpg" alt="Romance 6" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image3.jpg" alt="Romance 7" class="img-fluid"></div>
        </div>
        <!-- Comedy -->
        <h2>Comedy</h2>
        <div class="category-row">
          <div class="category-card"><img src="./assets/imagecomedy.jpg" alt="Comedy 1" class="img-fluid"></div>
