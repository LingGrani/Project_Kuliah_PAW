          <div class="category-card"><img src="./assets/image4.jpg" alt="Comedy 7" class="img-fluid"></div>
        </div>
        <!-- Horror -->
        <h2>Horror</h2>
        <div class="category-row">
          <div class="category-card"><img src="./assets/imagehoror.jpg" alt="Horror 1" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image6.jpg" alt="Horror 2" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image1.jpg" alt="Horror 3" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image2.jpg" alt="Horror 4" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image3.jpg" alt="Horror 5" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image4.jpg" alt="Horror 6" class="img-fluid"></div>
          <div class="category-card"><img src="./assets/image5.jpg" alt="Horror 7" class="img-fluid"></div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
